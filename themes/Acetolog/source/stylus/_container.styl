@charset "UTF-8";

.al_fake_background {
    background-color: $fake_background_color;
    top: 100px;
    width: 100%;
    bottom: 0;
}

.al_main_container {
    position: relative;
    background-color: $background_color;
    color: #444;
    padding: 100px 60px;
}

.al_post_nav {    
    justify-content: space-between;
    margin-top: 50px;

    .al_post_nav_item {
        padding: 12px 0;
        max-width 180px;
        cursor: pointer;

        &:hover {
            fill: $theme_color;
            color: $theme_color;
        }
            
        color: $list_title_color;
    }

    .al_arrow {
        width: 10px;
        height 10px
        margin: 0 10px;
        display: inline-block;
        flex-shrink: 0;
    }

    .icon {
        width: 50px;
        height 50px;
        margin: 0 10px;
        border-radius: 25px;
    }
}

@media screen and (max-width: 768px) {
    .al_main_container {
        margin: 0;
        padding: 50px 1.5rem;
        box-shadow: rgba(1, 1, 1, 0.1) 0px 1px 6px;
    }
}

@media screen and (min-width: 769px) and (max-width: 1249px) {
    .al_main_container {
        margin: 0 50px;
    }
}

@media screen and (min-width: 1250px) {
    .al_main_container {
        padding: 100px 50px;
        max-width: 1170px;
        margin: 0 auto;
    }
}