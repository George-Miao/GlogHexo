body {
    margin: 0;
    scroll-behavior: smooth;
    position: relative;
    overflow-wrap: break-word;
}

body.al_no_scroll {
    overflow: hidden;
}

a {
    text-decoration: none;
}

.dis_flex {
    display: flex;   
}

.dis_flex_jcenter {
    display: flex;
    justify-content: center;
}

.dis_flex_acenter {
    display: flex;
    align-items: center;
}

.dis_flex_center {
    display: flex;
    justify-content: center;
    align-items: center;
}

.al_pos_ab {
    position: absolute;
}

.al_pos_fixed {
    position: fixed;
}

.al_full_cover {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.al_button {
    text-align: center;
    font-size: 11px;
    padding: 0 20px;
    height: 40px;
    line-height: 40px;
    &:hover {
        box-shadow: rgba(1, 1, 1, 0.1) 0px 10px 20px;
    }
}

.al_button_theme {
    color: white;
    background: $theme_color;
    border: 1px solid $theme_color;
}

.al_button_transparent {
    color: $theme_color;
    border: 1px solid $theme_color;
}

.al_letter {
    text-transform: uppercase;
    color: rgba(0,0,0,0.1);
    font-size: 190px;
    font-weight: 600;
    display: block;
    user-select: none
}

.al_shadow {
    box-shadow: rgba(1, 1, 1, 0.2) 0px 10px 20px;
}

.al_text_ellipsis {
    overflow: hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
}

.nonselectable {
     -webkit-touch-callout: none;
     -webkit-user-select: none;
     -khtml-user-select: none;
     -moz-user-select: none;
     -ms-user-select: none;
     user-select: none;
}

.category-link {
    color: #888
}

