.al_article {
  max-width: 720px;
  margin: 0 auto;
  position: relative;
  list-style-type: none;
  padding: 40px 0;
}

.al_post_title_letter {
  left: -60px;
  line-height: 190px;
  top: -20px;
  z-index: 0;
}

article,aside,details,figcaption,figure,footer,header,hgroup,main,menu,nav,section,summary,ins {
  display: block
}

* {
  box-sizing: border-box
}

u {
  text-decoration: none;
  background-image: linear-gradient(to bottom, rgba(0,0,0,0) 50%, $theme_color_light 50%);
  background-repeat: repeat-x;
  background-size: 2px 2px;
  background-position: 0 1.05em
}

s {
  color: #878787
}

p {
  margin-bottom: 0.1em
}

hr {
  margin-bottom: 0.7em;
  margin-top: 0.7em
}

ins, .success, .info, .warning, .danger {
  padding: .5rem .5rem .5rem 1rem;
  margin-left: -1rem;
  text-decoration: none;
}

.success, .info, .warning, .danger {
  text-decoration: none;
  margin: 2rem 0;
  p {
    margin-top: 0.35rem
  }
}

ins {
  background: #e5ffd5;
  border-left: .2rem solid #aade8b;
  &::before {
    content: "+";
    margin-right: 1rem
  }
  line-height: normal
}

.success {
  background: #e5ffd5;
  border-left: .2rem solid #aade8b;
}

.info {
  background: #cbeeff;
  border-left: .2rem solid #53ceff;;
}

.warning {
  background: #ffe2d1;
  border-left: .2rem solid #ffa670;
}

.danger {
  background: #ffc5c5;
  border-left: .2rem solid #ff6868;
}

blockquote {
  display: block;
  margin-left: -1em;
  padding-left: 0.8em;
  border-left: 0.2em solid $theme_color_light;
  font-style: italic;
}

.arrow svg #rod {
  stroke: #545454
}

.arrow svg #point {
  fill: #545454
}

mark {
  color: inherit;
   display: inline;
  padding: 0.2em 0.5em;
  background-color: #fcffc0
}

figure.highlight {
  overflow: hidden;
  overflow-x: auto;
  background: #282a36;
  padding: 10px;
  font-size: 14px;
  color: #ccc;

  pre {
    margin: 0;
  }

  td {
        border: none;
        padding: 0;
  }

  td.gutter {
    text-align: right;

    pre {
      padding-right: 15px;
    }
  }
}

#post-body > table {
  border-collapse: collapse;
  border-spacing: 0;
  width: 100%;
  display: block;
  line-height: 1.5;

  th, td {
    padding: 6px 13px;
    border: 1px solid #dfe2e5;
  }

  tr:nth-child(2n) {
    background-color: #f6f8fa;
  }
}

#post-body > ul, #post-body > ol {
  padding-inline-start: 0px;

  // li {
    // margin-bottom: 5px;
  // }

  p {
    display: inline;
  }
}

pre {
  white-space: pre-wrap;       /* css-3 */
  white-space: -moz-pre-wrap;  /* Mozilla, since 1999 */
  white-space: -pre-wrap;      /* Opera 4-6 */
  white-space: -o-pre-wrap;    /* Opera 7 */
}

#post-body > ul {
  list-style: none;
  position: relative;

  li {
    &::before {
      content: "â€¢";
      color: $theme_color;
      display: inline-block;
      margin-right: 10px;
      line-height: 23px;
      position: absolute;
      left: -1.4rem;
    }

    &::marker {
      content: ""
    }

    line-height 1.5rem;
  }
}

#post-body > h2 {
  padding-bottom: .3em;
  border-bottom: 1px solid #dedede;
}

.task-list-item  {
  position: relative;
  margin-bottom: .4rem;
  &::before{
    content: ""!important
  }
  input {
    margin: 0;
    position: absolute;
    top: .25rem;
  }
  label {
    text-indent: 0
    line-height: 100%
    margin-left: 1.5rem
  }
}

.footnotes-list {
  padding-inline-start: 0
}

.footnote-item {
  counter-reset: footnote;
  margin-top: 1rem;
  display: flex;
  position: relative;
  
  p {
    margin-top: 0
    text-indent: 0
  }

  &::before {
      content: counter(ol) ".";
      line-height: 24px;
      counter-increment: ol;
      color: $theme_color;
      font-family: cascadia code;
      text-align: right;
      min-width: 1em;
      margin-right: 0.5em;
      font-size: 14px;
      position: absolute;
      left: -1.4rem;
    }
}


#post-body dl dd{
  margin-inline-start: 20px;
  margin-bottom: 15px
}

ol {
  counter-reset: ol;
  li {
    display: block;
    // text-indent: -1em;
    line-height 28px;

    &::before {
      content: counter(ol) ".";
      line-height: 24px;
      counter-increment: ol;
      color: $theme_color;
      font-family: cascadia code;
      text-align: right;
      min-width: 1em;
      margin-right: 0.5em;
      font-size: 14px;
      position: absolute;
      left: -1.4rem;
    }
  }
}



@media screen and (max-width: 768px) {
  #post-body dl dd{
    margin-inline-start: 20px;
  }
  .al_index_background_letter {
    display: none
  }
}